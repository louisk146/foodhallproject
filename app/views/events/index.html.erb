<body class="container events">
<%= link_to '<button>Back</button>'.html_safe, controller: 'welcome' %>

<p><br> All events free, pay as you feel or fundraisers.</p>

<p><%= link_to '<button>Add an event</button>'.html_safe, new_event_path %></p>
<p style="font-size:10px"><%= link_to 'Get Email Updates'.html_safe, new_user_registration_path %> </p>

 <thread>
<table>
  <tr>
    <!-- <th style="padding:5px 10px 5px 10px;">Image:</th> -->
    <th style="padding:5px 10px 5px 10px;">image</th>
    <th style="padding:5px 10px 5px 10px;">Event:</th>
    <th style="padding:5px 10px 5px 10px;">Location:</th>
    <th style="padding:5px 10px 5px 10px;">description:</th>
    <th style="padding:5px 10px 5px 10px;">Event date:</th>
    <th style="padding:5px 10px 5px 10px;">Email or best contact:</th>
    <th style="padding:5px 10px 5px 10px;">Event comments:</th>
  </tr>
 </thread>

<tbody>
  <% @events.each do |event| %> 
    <tr>
      <td style="padding:5px 10px 5px 10px;"><%= image_tag event.image.url(:medium) %></td>
      <td style="padding:5px 10px 5px 10px; font-weight:bold"><%= event.title %></td>
      <td style="padding:5px 10px 5px 10px; font-size:12px"> <%= event.location %></td>
      <td style="min-width:10px padding:5px 10px 5px 10px; font-size:12px"><%= truncate event.description, length: 100 %>
      <p style="font-size:10px">  <%= link_to 'More', event %></p> </td>
     <!-- <td style="padding:5px 10px 5px 10px; font-size:12px"><%= event.description %></td> -->
      <td style="padding:5px 10px 5px 10px; font-size:12px"><%= event.date %>   </td>
      <td style="padding:5px 10px 5px 10px;font-size:12px"><%= event.email %></td>
      <!--<td style="padding:5px 10px 5px 12px;"><%= link_to 'Show', event_path(event) %></td> -->
      <td style="padding:5px 10px 5px 12px; font-size:10px"><%= link_to 'Edit', edit_event_path(event) %></td>
      <td style="padding:5px 10px 5px 12px; font-size:10px"><%= link_to 'Delete', event_path(event),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td> 
      
  </tbody>
  <% end %>
</table>


